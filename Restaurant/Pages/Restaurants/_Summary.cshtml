
@model Food.Restaurant
<div class="panel panle-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Location </span>
        <span>Cuisine: @Model.Cusine </span>
    </div>
    <div class="panel-footer">
        <a class="btn btn-dark" asp-page="./Detail" asp-route-restaurantId="@Model.Id">Zoom</a>
        <a class="btn btn-dark" asp-page="./Edit" asp-route-restaurantId="@Model.Id">Edit</a>
        <a class="btn btn-dark" asp-page="./Delete" asp-route-restaurantId="@Model.Id">Delete</a>
    </div>

</div>
