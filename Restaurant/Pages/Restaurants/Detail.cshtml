@page "{restaurantId:int}"
@model Restaurant.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h1>@Model.Rest.Name</h1>
<div>
    Id: @Model.Rest.Id
</div>
<div>
    Location: @Model.Rest.Location
</div>
<div>
    Cuisine: @Model.Rest.Cusine
</div>

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<a asp-page="./List" class="btn btn-info">All Restaurant</a>

