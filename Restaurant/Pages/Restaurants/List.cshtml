@page
@model Restaurant.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control"
                   asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-info">
                   Search
                </button>
            </span>
        </div>
        <span class="glyphicon glyphicon-search"></span>
    </div>
</form>

<table class="table">
    @foreach (var r in Model.Restaurants)

    {
    <tr>
        <td>@r.Name</td>
        <td>@r.Location</td>
        <td>@r.Cusine</td>
        <td>
            <a class="btn btn-dark" asp-page="./Detail" asp-route-restaurantId="@r.Id">Zoom</a>
        </td>
        <td>
            <a class="btn btn-dark" asp-page="./Edit" asp-route-restaurantId="@r.Id">Edit</a>
        </td>
    </tr>
    }
</table>

<a asp-page="./Edit" class="btn btn-primary">Add New</a>

@Model.Message

